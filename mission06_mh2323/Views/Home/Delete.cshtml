@{
    ViewData["Title"] = "Delete Movie";
}
@model Movie
<!--Movie delete-->
<center>
    <div>
        <h1>Confirm Deletion</h1>
        <h3>Are you sure you want to delete the record for @Model.Title?</h3>
    </div>
    <!--Form for movie delete-->
    <form method="post" asp-action="Delete">
        <!--Submit-->
        <button type="submit" class="btn btn-primary btn-xl rounded-pill mt-5">Delete</button>
        <a asp-controller="Home" asp-action="MovieList" m class="btn btn-primary btn-xl rounded-pill mt-5" style="background-color:hotpink">Cancel</a>

        <!--Hidden MovieId-->
        <input type="hidden" asp-for="MovieId"/>
    </form>
</center>
