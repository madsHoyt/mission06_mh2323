@{
    ViewData["Title"] = "Movie Form";
}

@model Movie
<!--Movie Form-->
<center>
    <div>
        <h1>Movie Form</h1>
    </div>
    <!--Form for movie input-->
    <form method="post">
        <div class="card border-left-primary shadow h-100 py-2" style="background-color:pink; padding:15px; padding-bottom:15px; padding-top:15px">
            <div class="row">
                <!--Category-->
                <div class="col">
                    <label asp-for="Category" style="font-weight:bold">Category</label>
                    <input asp-for="Category" class="form-control" required />
                </div>
                <!--Title-->
                <div class="col">
                    <label asp-for="Title" style="font-weight:bold">Title</label><br />
                    <input asp-for="Title" class="form-control" required />
                </div>
            </div>
            <div class="row">
                <!--Year-->
                <div class="col">
                    <label asp-for="Year" style="font-weight:bold">Year</label><br />
                    <input asp-for="Year" class="form-control" required />
                </div>
                <!--Director-->
                <div class="col">
                    <label asp-for="Director" style="font-weight:bold">Director</label><br />
                    <input asp-for="Director" class="form-control" required />
                </div>
            </div>
            <div class="row">
                <!--Rating-->
                <div class="col">
                    <label asp-for="Rating" style="font-weight:bold">Rating</label><br />
                    <select asp-for="Rating" class="form-control" required>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                </div>
                <!--Edited-->
                <div class="col">
                    <label asp-for="Edited" style="font-weight:bold">Edited</label><br />
                    <select asp-for="Edited" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <!--Lent to-->
                <div class="col">
                    <label asp-for="LentTo" style="font-weight:bold">Lent To</label><br />
                    <input asp-for="LentTo" class="form-control" />
                </div>
                <!--Notes-->
                <div class="col">
                    <label asp-for="Notes" style="font-weight:bold">Notes</label><br />
                    <input asp-for="Notes" class="form-control" maxlength="25" />
                </div>
            </div>
            <!--Submit-->
            <button type="submit" class="btn btn-primary btn-xl rounded-pill mt-5">Submit</button>
        </div>
    </form>
</center>
